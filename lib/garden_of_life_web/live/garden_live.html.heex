<table>
    <%= for row <- 0..19 do %>
        <tr>
            <%= for column <- 0..19 do %>
                <%= if GardenOfLife.Garden.is_alive(@grid, {row, column}) do%>
                    <td class="cell w-6 h-6 bg-slate-100 text-center p-0 m-0" phx-click="toggle_cell"
                        phx-value-row={row} phx-value-column={column}> ðŸŒ¸ </td>
                    <% else %>
                        <td class="cell w-6 h-6 bg-slate-300 text-center p-0 m-0" phx-click="toggle_cell"
                            phx-value-row={row} phx-value-column={column}> &nbsp; </td>
                        <% end %>
                            <% end %>
        </tr>
        <% end %>
</table>

<button phx-click="step_grid">Step</button>
<button phx-click="play">Play</button>
<button phx-click="stop">Stop</button>